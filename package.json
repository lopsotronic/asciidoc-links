{
  "name": "asciidoc-links",
  "displayName": "Asciidoc Links",
  "description": "Visualize links and includes between Asciidoc files",
  "version": "0.1.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Visualization"],
  "activationEvents": [
    "onCommand:asciidoc-links.showGraph"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "asciidoc-links.showGraph",
        "title": "Asciidoc Links: Show Graph"
      }
    ],
    "configuration": {
      "title": "Asciidoc Links",
      "properties": {
        "asciidoc-links.showColumn": {
          "type": "string",
          "default": "beside",
          "enum": ["active", "beside", "one", "two", "three"],
          "description": "Column to show the graph in"
        },
        "asciidoc-links.openColumn": {
          "type": "string",
          "default": "one",
          "enum": ["active", "beside", "one", "two", "three"],
          "description": "Column to open files in"
        },
        "asciidoc-links.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically show graph on startup"
        },
        "asciidoc-links.fileTypes": {
          "type": "array",
          "default": ["adoc", "asciidoc"],
          "description": "File extensions to include"
        },
        "asciidoc-links.titleMaxLength": {
          "type": "number",
          "default": 0,
          "description": "Max length for node titles (0 = no limit)"
        },
        "asciidoc-links.graphType": {
          "type": "string",
          "default": "default",
          "description": "Graph type folder name"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "md5": "^2.3.0"
  }
}